doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Order
    style.
      body {
        font-family: Arial, Helvetica, sans-serif;
      }

      h2 {
        margin-bottom:10px;
      }

      th,td {
        padding:10px;
        border:1px solid black;
      }

      p {
        font-weight:700;
      }

  body 
    h2 Xin chào #{fullName}
    p Phone: #{phoneNumber}
    p Address: #{address}
    table(style='text-align:center') 
      thead 
        tr
          th Tên sản phẩm
          th Hình ảnh
          th Giá
          th Số lượng
          th Thành tiền
      tbody 
        each item in products
          tr 
            td #{item.product.name}
            td 
              img(src=`${item.product.img1}` width='50px' height='50px' alt=`${item.product.name}`)
            td #{item.product.price.toLocaleString('DE-de')} VND
            td #{item.amount}
            td #{(item.product.price*item.amount).toLocaleString('DE-de')} VND
    h2 Tổng thanh toán:
    p(style='font-size:24px;margin-top:0px') #{total.toLocaleString('DE-de')} VND

    h2 Cảm ơn bạn
